<h1>Listing galleries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Published</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.name %></td>
        <td><%= gallery.published %></td>
        <td><%= link_to 'Show', [:admin, gallery] %></td>
        <td><%= link_to 'Edit', edit_admin_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', [:admin, gallery], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

